# ========================================
# AWS ACADEMY CREDENTIALS (⚠️ REFRESH EVERY LAB SESSION)
# ========================================
# Get fresh credentials from AWS Academy Learner Lab > AWS Details
# These expire after a few hours and must be updated each time you start the lab
export AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
export AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
export AWS_SESSION_TOKEN=YOUR_AWS_SESSION_TOKEN
export AWS_DEFAULT_REGION=us-east-1
export AWS_PROFILE=um_aws

# ========================================
# PERSISTENT CONFIGURATION (✅ SET ONCE, STAYS THE SAME)
# ========================================
# AWS Academy LabRole ARN - Used by Terraform
# Replace YOUR_ACCOUNT_ID with your AWS account number
export TF_VAR_lab_role_arn="arn:aws:iam::YOUR_ACCOUNT_ID:role/LabRole"

# Add Python 3.11 to PATH for Terraform Lambda packaging
export PATH="/opt/homebrew/bin:$PATH"

# AWS Academy LabRole ARN - Used by Terraform
# Replace YOUR_ACCOUNT_ID with your AWS account number (e.g., 037689899742)
export TF_VAR_lab_role_arn="arn:aws:iam::YOUR_ACCOUNT_ID:role/LabRole"

# GitHub Personal Access Token for AWS Amplify
# Create at: https://github.com/settings/tokens (classic token)
# Required scopes: repo, admin:repo_hook
# ⚠️ KEEP THIS SECRET - Once set, it stays the same
export TF_VAR_github_access_token="YOUR_GITHUB_TOKEN_HERE"

# Python 3.11 path for Terraform Lambda packaging
# This stays the same after initial setup
export PATH="/opt/homebrew/bin:$PATH"
